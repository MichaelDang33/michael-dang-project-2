<%- include("../partials/header") %>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE-edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Michael's Weekly Calendar Web App</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    </head>

<h3><u>Event Editing: "<%= event.title %>"</u></h3>
    <nav class="logout">
        <a href="/logout">Logout</a>
    </nav>

    <div class="editDetails">
        <form action="/events/<%= event.id %>?_method=PUT" method="POST">
        <button class="backButton" onclick="location.href='/events'">Back To All Events</button>
        <br>
        <br>
        <h4><label for="title">Update your event's title:</label></h4>
            <input type="text" name="title" placeholder=" <%= event.title %>">
        
        <h4><label for="description">Update the description of your event:</label></h4>
            <input type="text" name="description" placeholder="<%= event.description %>" />

        <h4><label for="start">Update the start time of your event:</label></h4>
            <input type="date" id="start" name="event-start" required>
    
        <h4><label for="end">Update the end time of your event:</label></h4>
            <input type="date" id="end" name="event-end" required>

            <button type="submit">Update Event</button>

        </form>
    </div>




<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<%- include("../partials/footer") %>