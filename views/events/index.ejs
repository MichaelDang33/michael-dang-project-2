<%- include("../partials/header") %>

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE-edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Michael's Weekly Calendar Web App</title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js">
        <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js"></script>
    </head>

<h3><u>Events Hub</u></h3>

<% events.forEach(function (evt) { %>
<div class="eventShow">
    <a href="/events/<%= evt.id %>">
        <h5 class="mb-1">Name of Event: <%= evt.title %></h5>
        <small>Placeholder for time</small>
      <p class="mb-1">Description: <%= evt.description %></p>
      <small class="showPrompt">Click in the box to see more!</small>
    </a>
    <% }) %>
</div>


<p>
    <%= errorMsg %>
</p>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

<%- include("../partials/footer") %>