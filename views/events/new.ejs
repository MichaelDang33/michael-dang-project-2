<%- include("../partials/header") %>

<title> Add Event/Task</title>

<h3>Enter a New Event or Task</h3>

<nav>
    <a href="/logout">Logout</a>
</nav>
<br>
<form action="/events" method="POST" autocomplete="off">
    <label>Title:
        <input type="text" name="title" required>
    </label><br>

    <label>Description:
        <input type="text" name="description" required>
    </label><br>

    <label>Start Date:
        <input type="date" id="start" name="event-start" required>
    </label><br>

    <label>End Date:
        <input type="date" id="end" name="event-end" required>
    </label><br>
    
    <button type="submit">Add Event</button>
</form>

<p><%= errorMsg %></p>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>

